{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Both Backend and Frontend",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "start"], // This runs the 'start' script defined in your package.json
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run Frontend in Edge",
        "type": "msedge",
        "request": "launch",
        "url": "https://localhost:5173", // Your Vite dev server URL
        "webRoot": "${workspaceFolder}/Frontend/vite-project",
        "sourceMaps": true
      }
    ]
  }
  